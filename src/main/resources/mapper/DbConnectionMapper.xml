<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dbplatform.mapper.DbConnectionMapper">
    <resultMap id="DbConnectionResultMap" type="com.dbplatform.entity.DbConnection">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="db_type" property="dbType" />
        <result column="host" property="host" />
        <result column="port" property="port" />
        <result column="database_name" property="databaseName" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="create_user" property="createUser" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <select id="findAll" resultMap="DbConnectionResultMap">
        SELECT * FROM db_connection
    </select>

    <select id="findByUserId" parameterType="java.lang.Long" resultMap="DbConnectionResultMap">
        SELECT * FROM db_connection WHERE create_user = #{userId}
    </select>

    <select id="findById" parameterType="java.lang.Long" resultMap="DbConnectionResultMap">
        SELECT * FROM db_connection WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.dbplatform.entity.DbConnection">
        INSERT INTO db_connection (
            name, db_type, host, port, database_name, username, password, create_user, create_time, update_time
        ) VALUES (
            #{name}, #{dbType}, #{host}, #{port}, #{databaseName}, #{username}, #{password}, #{createUser}, #{createTime}, #{updateTime}
        )
    </insert>

    <update id="update" parameterType="com.dbplatform.entity.DbConnection">
        UPDATE db_connection SET
            name = #{name},
            db_type = #{dbType},
            host = #{host},
            port = #{port},
            database_name = #{databaseName},
            username = #{username},
            password = #{password},
            update_time = #{updateTime}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM db_connection WHERE id = #{id}
    </delete>

    <select id="countTotalConnections" resultType="java.lang.Long">
        SELECT COUNT(*) FROM db_connection
    </select>

    <select id="countConnectionsByUser" parameterType="java.lang.Long" resultType="java.lang.Long">
        SELECT COUNT(*) FROM db_connection WHERE create_user = #{userId}
    </select>
</mapper>